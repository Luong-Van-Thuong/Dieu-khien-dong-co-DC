<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity7">

    <LinearLayout
        android:layout_width="352dp"
        android:layout_height="696dp"
        android:layout_marginStart="29dp"
        android:layout_marginTop="19dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="16dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <EditText
            android:id="@+id/idGoc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Nhập id muốn tìm"
            android:inputType="text" />

        <TextView
            android:id="@+id/tenGoc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp" />

        <Button
            android:id="@+id/buttonXoaIDNV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Xóa nhân viên" />

        <Button
            android:id="@+id/buttonSuaNV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sửa nhân viên" />

        <EditText
            android:id="@+id/tenMoi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Nhập tên muốn sửa"
            android:inputType="text" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>